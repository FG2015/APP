<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fabertelecom.fabergroup" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".FaberApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Activities.TasksActivity"
            android:label="@string/title_activity_tareas" >
        </activity>
        <activity
            android:name=".Activities.DetailsActivity"
            android:label="@string/title_activity_detalles" >
        </activity>
        <activity
            android:name=".Activities.SignUpActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name=".Activities.NewTaskActivity"
            android:label="@string/title_activity_nueva_tarea" >
        </activity>
    </application>

</manifest>
